<!DOCTYPE mapper PUBLIC '-//mybatis.org//DTD Mapper 3.0//EN' 'http://mybatis.org/dtd/mybatis-3-mapper.dtd'>
<mapper namespace="mybatis.idao.IPeriodoDAO">
    <select id="obtenerPeriodos" parameterType="int" resultType="empenofacil.model.Periodo">
        SELECT * FROM periodo WHERE folio = #{folio}
    </select>
    <insert id="crearPeriodo" parameterType="empenofacil.model.Periodo">
        INSERT INTO periodo(folio,numPeriodo,prestamo,interes,iva,
        refrendo,finiquito,fechaInicioPeriodo,fechaFinPeriodo) 
        VALUES(#{folio},#{numPeriodo},#{prestamo},#{interes},#{iva},
        #{refrendo},#{finiquito},#{fechaInicioPeriodo},#{fechaFinPeriodo})
    </insert>
</mapper>