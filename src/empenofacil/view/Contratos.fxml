<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="empenofacil.controller.ContratosController">
    <children>
        <VBox fx:id="contratosV">
            <children>
                <AnchorPane VBox.vgrow="ALWAYS">
                    <children>
                  <HBox layoutX="5.0" layoutY="5.0" spacing="5.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <children>
                              <Label text="Administración de empeños">
                                  <font>
                                      <Font name="System Bold" size="18.0" />
                                  </font>
                              </Label>
                              <Button mnemonicParsing="false" onAction="#nuevo" text="Nuevo empeño" />
                     </children>
                  </HBox>
                        <TextField fx:id="buscar" promptText="Buscar empeño..." AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                        <TableView fx:id="contratos" prefHeight="200.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="30.0">
                            <columns>
                                <TableColumn fx:id="folio" prefWidth="75.0" text="Folio" />
                                <TableColumn fx:id="cliente" prefWidth="75.0" text="Cliente" />
                                <TableColumn fx:id="estadoContrato" prefWidth="75.0" text="Estado" />
                                <TableColumn fx:id="total" prefWidth="75.0" text="Total" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                    <VBox.margin>
                        <Insets bottom="-5.0" left="5.0" right="5.0" top="5.0" />
                    </VBox.margin>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                </AnchorPane>
            </children>
        </VBox>
        <VBox fx:id="contratoV" layoutX="10.0" layoutY="10.0" visible="false">
            <children>
                <AnchorPane VBox.vgrow="ALWAYS">
                    <children>
                  <HBox layoutX="5.0" layoutY="5.0" spacing="5.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <children>
                              <Label text="Nuevo empeño">
                                  <font>
                                      <Font name="System Bold" size="18.0" />
                                  </font>
                              </Label>
                              <Button mnemonicParsing="false" onAction="#regresar" text="Regresar a empeños" />
                     </children>
                  </HBox>
                        <TableView fx:id="prendas" prefHeight="200.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="30.0">
                            <columns>
                                <TableColumn fx:id="nombre" prefWidth="75.0" text="Nombre" />
                                <TableColumn fx:id="precio" prefWidth="75.0" text="Precio" />
                                <TableColumn fx:id="descripcion" prefWidth="75.0" text="Descripción" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                    <VBox.margin>
                        <Insets bottom="-5.0" left="5.0" right="5.0" top="5.0" />
                    </VBox.margin>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                </AnchorPane>
            </children>
        </VBox>
    </children>
</StackPane>
